<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="game_menu" defaultFocusElement="game_play" controller="DoS.GameMenuController">
        <layer id="main_menu" childLayout="absolute" backgroundImage="res/staley.jpg">
            
            <text font="aurulent-sans-16.fnt"  color="#FFFF" text="DoS Defense of Staley"
 				x="300" y="50" align="center" valign="center" />
 			<text font="aurulent-sans-16.fnt"  color="#FFFF" text="Do you want to defeat me?"
 				x="425" y="210" align="center" valign="center" />
            <control name="button" id="play_game" childLayout="center"  x="600" width="150px" y="125" label="Play Game" height="50px" 
             visibleToMouse="true" />
            <control name="button" id="load_game" childLayout="center" x="600" width="150px" y="180" label="Load Game" height="50px"/>
            <control name="button" id="tutorial_game" childLayout="center" x="600" width="150px" y="235" label="Tutorial" height="50px" visibleToMouse="true"/>
            <control name="button" id="exit_game" childLayout="center" x="600" width="150px" y="290" label="Exit" height="50px" visibleToMouse="true"/>
        </layer>
    </screen>
</nifty>